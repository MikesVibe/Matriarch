@page "/login"
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.OpenIdConnect
@inject NavigationManager NavigationManager

<PageTitle>Login - Matriarch</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Sign In to Matriarch</h3>
                </div>
                <div class="card-body text-center py-5">
                    <h5 class="mb-4">Welcome to Matriarch Identity Role Assignments Viewer</h5>
                    <p class="text-muted mb-4">Please sign in with your Azure account to continue</p>
                    
                    <form method="get" action="MicrosoftIdentity/Account/SignIn">
                        <input type="hidden" name="redirectUri" value="/" />
                        <button type="submit" class="btn btn-primary btn-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-microsoft me-2" viewBox="0 0 16 16">
                                <path d="M7.462 0H0v7.19h7.462zM16 0H8.538v7.19H16zM7.462 8.211H0V16h7.462zm8.538 0H8.538V16H16z"/>
                            </svg>
                            Sign in with Microsoft
                        </button>
                    </form>
                    
                    <div class="mt-4">
                        <small class="text-muted">
                            You will be redirected to Microsoft login page
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

