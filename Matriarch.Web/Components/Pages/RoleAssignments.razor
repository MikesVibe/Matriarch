@page "/roleassignments"
@using Matriarch.Web.Models
@using Matriarch.Web.Services
@inject IRoleAssignmentService RoleAssignmentService
@rendermode InteractiveServer

<PageTitle>Identity Role Assignments</PageTitle>

<h1>Identity Role Assignments Viewer</h1>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Identity Information</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="objectId" class="form-label">Object ID:</label>
                        <input type="text" class="form-control" id="objectId" @bind="objectId" placeholder="e.g., 12345678-1234-1234-1234-123456789abc" />
                    </div>
                    <div class="col-md-6">
                        <label for="applicationId" class="form-label">Application ID:</label>
                        <input type="text" class="form-control" id="applicationId" @bind="applicationId" placeholder="e.g., 87654321-4321-4321-4321-cba987654321" />
                    </div>
                    <div class="col-md-6">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" class="form-control" id="email" @bind="email" placeholder="e.g., user@example.com" />
                    </div>
                    <div class="col-md-6">
                        <label for="name" class="form-label">Name:</label>
                        <input type="text" class="form-control" id="name" @bind="userName" placeholder="e.g., John Doe" />
                    </div>
                </div>
                <div class="mt-3">
                    <button class="btn btn-primary" @onclick="LoadRoleAssignments" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Loading...</span>
                        }
                        else
                        {
                            <span>Load Role Assignments</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@if (result != null)
{
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5>Identity Summary</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9">@result.Identity.Name</dd>
                        
                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@result.Identity.Email</dd>
                        
                        <dt class="col-sm-3">Object ID:</dt>
                        <dd class="col-sm-9"><code>@result.Identity.ObjectId</code></dd>
                        
                        <dt class="col-sm-3">Application ID:</dt>
                        <dd class="col-sm-9"><code>@result.Identity.ApplicationId</code></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5>Direct Role Assignments</h5>
                </div>
                <div class="card-body">
                    @if (result.DirectRoleAssignments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Role Name</th>
                                        <th>Scope</th>
                                        <th>Assigned To</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ra in result.DirectRoleAssignments)
                                    {
                                        <tr>
                                            <td><strong>@ra.RoleName</strong></td>
                                            <td><code class="text-muted">@ra.Scope</code></td>
                                            <td><span class="badge bg-primary">@ra.AssignedTo</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No direct role assignments found.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5>Security Group Memberships & Role Assignments</h5>
                </div>
                <div class="card-body">
                    @if (result.SecurityGroups.Any())
                    {
                        @foreach (var group in result.SecurityGroups)
                        {
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6 class="mb-1">@group.DisplayName</h6>
                                    <small class="text-muted">@group.Description</small>
                                </div>
                                <div class="card-body">
                                    @if (group.RoleAssignments.Any())
                                    {
                                        <h6 class="text-muted mb-2">Role Assignments:</h6>
                                        <div class="table-responsive mb-3">
                                            <table class="table table-sm table-bordered">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Role Name</th>
                                                        <th>Scope</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var ra in group.RoleAssignments)
                                                    {
                                                        <tr>
                                                            <td><strong>@ra.RoleName</strong></td>
                                                            <td><code class="text-muted">@ra.Scope</code></td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                    
                                    @if (group.ParentGroups.Any())
                                    {
                                        <h6 class="text-muted mb-2">Inherited from Parent Groups:</h6>
                                        @foreach (var parentGroup in group.ParentGroups)
                                        {
                                            <div class="card mb-2 border-secondary">
                                                <div class="card-header bg-light">
                                                    <h6 class="mb-1">â†³ @parentGroup.DisplayName</h6>
                                                    <small class="text-muted">@parentGroup.Description</small>
                                                </div>
                                                <div class="card-body">
                                                    @if (parentGroup.RoleAssignments.Any())
                                                    {
                                                        <div class="table-responsive">
                                                            <table class="table table-sm table-bordered">
                                                                <thead class="table-light">
                                                                    <tr>
                                                                        <th>Role Name</th>
                                                                        <th>Scope</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var ra in parentGroup.RoleAssignments)
                                                                    {
                                                                        <tr>
                                                                            <td><strong>@ra.RoleName</strong></td>
                                                                            <td><code class="text-muted">@ra.Scope</code></td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <p class="text-muted mb-0">No role assignments in this parent group.</p>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Not a member of any security groups.</p>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private string objectId = "12345678-1234-1234-1234-123456789abc";
    private string applicationId = "87654321-4321-4321-4321-cba987654321";
    private string email = "john.doe@example.com";
    private string userName = "John Doe";
    private bool isLoading = false;
    private IdentityRoleAssignmentResult? result;

    private async Task LoadRoleAssignments()
    {
        isLoading = true;
        try
        {
            result = await RoleAssignmentService.GetRoleAssignmentsAsync(objectId, applicationId, email, userName);
        }
        finally
        {
            isLoading = false;
        }
    }
}
