        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>All Role Assignments (from all groups)</h5>
                </div>
                <div class="card-body">
                    @if (isLoadingGroupRoleAssignments)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-warning" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted mt-2">Loading group role assignments...</p>
                        </div>
                    }
                    else
