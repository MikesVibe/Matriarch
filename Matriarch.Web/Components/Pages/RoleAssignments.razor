@page "/"
@page "/roleassignments"
@using Matriarch.Web.Models
@using Matriarch.Web.Services
@inject IRoleAssignmentService _roleAssignmentService
@rendermode InteractiveServer

<PageTitle>Identity Role Assignments</PageTitle>

<h1>Identity Role Assignments Viewer</h1>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Identity Information</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="dataSource" class="form-label">Data Source:</label>
                        <select class="form-select" id="dataSource" @bind="dataSource">
                            <option value="Local">Local Database</option>
                            <option value="Azure">Azure (Direct)</option>
                        </select>
                    </div>
                    <div class="col-md-6"></div>
                    <div class="col-md-12">
                        <label for="identityInput" class="form-label">Identity (Email, Object ID, Application ID, Group ID, or Name):</label>
                        <input type="text" class="form-control" id="identityInput" @bind="identityInput" placeholder="user@example.com" />
                        <div class="form-text">Enter an email, object ID (user/service principal/group), application ID (App Registration), group ID, or display name. The system will auto-detect the type and query Entra ID.</div>
                    </div>
                </div>
                <div class="mt-3">
                    <button class="btn btn-primary" @onclick="LoadRoleAssignments" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Loading...</span>
                        }
                        else
                        {
                            <span>Load Role Assignments</span>
                        }
                    </button>
                    @if (!string.IsNullOrEmpty(dataSource))
                    {
                        <span class="ms-3 text-muted">Using: <strong>@dataSource</strong></span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Error:</strong> @errorMessage
                <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)" aria-label="Close"></button>
            </div>
        </div>
    </div>
}

@if (result != null)
{
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5>Identity Summary</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Identity Type:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary">@GetIdentityTypeDisplay(result.Identity.Type)</span>
                            @if (!string.IsNullOrEmpty(result.Identity.ServicePrincipalType))
                            {
                                <span class="ms-2 text-muted">(@result.Identity.ServicePrincipalType)</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9">@result.Identity.Name</dd>
                        
                        @if (result.Identity.Type == IdentityType.User)
                        {
                            <dt class="col-sm-3">Email:</dt>
                            <dd class="col-sm-9">@result.Identity.Email</dd>
                        }
                        
                        @if (result.Identity.Type == IdentityType.User || result.Identity.Type == IdentityType.Group)
                        {
                            <dt class="col-sm-3">Object ID:</dt>
                            <dd class="col-sm-9"><code>@result.Identity.ObjectId</code></dd>
                        }
                        
                        @if (result.Identity.Type != IdentityType.User && result.Identity.Type != IdentityType.Group)
                        {
                            @if (!string.IsNullOrEmpty(result.Identity.ApplicationId))
                            {
                                <dt class="col-sm-3">ClientId / ApplicationId:</dt>
                                <dd class="col-sm-9"><code>@result.Identity.ApplicationId</code></dd>
                            }

                            @if (!string.IsNullOrEmpty(result.Identity.AppRegistrationId))
                            {
                                <dt class="col-sm-3">App Registration ObjectId:</dt>
                                <dd class="col-sm-9"><code>@result.Identity.AppRegistrationId</code></dd>
                            }

                            <dt class="col-sm-3">Enterprise Application ObjectId:</dt>
                            <dd class="col-sm-9"><code>@result.Identity.ObjectId</code></dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5>Direct Role Assignments</h5>
                </div>
                <div class="card-body">
                    @if (result.DirectRoleAssignments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Role Name</th>
                                        <th>Scope</th>
                                        <th>Assigned To</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ra in result.DirectRoleAssignments)
                                    {
                                        <tr>
                                            <td><strong>@ra.RoleName</strong></td>
                                            <td><code class="text-muted">@ra.Scope</code></td>
                                            <td><span class="badge bg-primary">@ra.AssignedTo</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No direct role assignments found.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5>Direct Group Memberships</h5>
                </div>
                <div class="card-body">
                    @if (result.SecurityGroups.Any())
                    {
                        var (directGroups, indirectGroups) = GetDirectAndIndirectGroups(result.SecurityGroups);
                        
                        <ul class="list-group">
                            @foreach (var group in directGroups)
                            {
                                <li class="list-group-item">
                                    <strong>@group.DisplayName</strong>
                                    @if (!string.IsNullOrEmpty(group.Description))
                                    {
                                        <br />
                                        <small class="text-muted">@group.Description</small>
                                    }
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Not a direct member of any security groups.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5>Indirect Group Memberships (via parent groups)</h5>
                </div>
                <div class="card-body">
                    @if (result.SecurityGroups.Any())
                    {
                        var (directGroups, indirectGroups) = GetDirectAndIndirectGroups(result.SecurityGroups);
                        
                        @if (indirectGroups.Any())
                        {
                            <ul class="list-group">
                                @foreach (var group in indirectGroups)
                                {
                                    <li class="list-group-item">
                                        <strong>@group.DisplayName</strong>
                                        @if (!string.IsNullOrEmpty(group.Description))
                                        {
                                            <br />
                                            <small class="text-muted">@group.Description</small>
                                        }
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted mb-0">No indirect group memberships.</p>
                        }
                    }
                    else
                    {
                        <p class="text-muted mb-0">No indirect group memberships.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5>All Role Assignments (from all groups)</h5>
                </div>
                <div class="card-body">
                    @{
                        var allGroupRoleAssignments = GetAllRoleAssignments();
                    }
                    @if (allGroupRoleAssignments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Role Name</th>
                                        <th>Scope</th>
                                        <th>Source</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ra in allGroupRoleAssignments)
                                    {
                                        <tr>
                                            <td><strong>@ra.RoleName</strong></td>
                                            <td><code class="text-muted">@ra.Scope</code></td>
                                            <td><span class="badge bg-info">@ra.AssignedTo</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No role assignments from group memberships.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5>API Permissions</h5>
                </div>
                <div class="card-body">
                    @if (result.ApiPermissions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Resource</th>
                                        <th>Permission</th>
                                        <th>Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var permission in result.ApiPermissions)
                                    {
                                        <tr>
                                            <td><strong>@permission.ResourceDisplayName</strong></td>
                                            <td><code>@permission.PermissionValue</code></td>
                                            <td><span class="badge bg-secondary">@permission.PermissionType</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No API permissions found (identity may not be a service principal).</p>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private string dataSource = "Azure";
    private string identityInput = "";
    private bool isLoading = false;
    private IdentityRoleAssignmentResult? result;
    private string? errorMessage;

    private async Task LoadRoleAssignments()
    {
        if (string.IsNullOrWhiteSpace(identityInput))
        {
            return;
        }

        isLoading = true;
        errorMessage = null;
        result = null;
        
        try
        {
            result = await _roleAssignmentService.GetRoleAssignmentsAsync(identityInput);
        }
        catch (InvalidOperationException ex) when (ex.Message.Contains("Could not resolve identity"))
        {
            errorMessage = $"Identity '{identityInput}' could not be found in the tenant. Please verify the input and try again.";
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred while loading role assignments: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private (List<SecurityGroup> directGroups, List<SecurityGroup> indirectGroups) GetDirectAndIndirectGroups(List<SecurityGroup> groups)
    {
        var directGroups = new List<SecurityGroup>();
        var indirectGroups = new List<SecurityGroup>();
        var processedIds = new HashSet<string>();
        
        // Add direct groups (top-level groups the user is a member of)
        foreach (var group in groups)
        {
            directGroups.Add(group);
            processedIds.Add(group.Id);
        }
        
        // Recursively collect all indirect groups (parent groups)
        void CollectParentGroups(SecurityGroup group)
        {
            foreach (var parentGroup in group.ParentGroups)
            {
                if (!processedIds.Contains(parentGroup.Id))
                {
                    processedIds.Add(parentGroup.Id);
                    indirectGroups.Add(parentGroup);
                    CollectParentGroups(parentGroup);
                }
            }
        }
        
        foreach (var group in groups)
        {
            CollectParentGroups(group);
        }
        
        return (directGroups, indirectGroups);
    }

    private string GetIdentityTypeDisplay(IdentityType identityType)
    {
        return identityType switch
        {
            IdentityType.User => "User",
            IdentityType.Group => "Group",
            IdentityType.ServicePrincipal => "Service Principal",
            IdentityType.UserAssignedManagedIdentity => "User-Assigned Managed Identity",
            IdentityType.SystemAssignedManagedIdentity => "System-Assigned Managed Identity",
            _ => "Unknown"
        };
    }

    private List<RoleAssignment> GetAllRoleAssignments()
    {
        if (result == null)
        {
            return new List<RoleAssignment>();
        }

        var allRoleAssignments = new List<RoleAssignment>();
        var processedIds = new HashSet<string>();
        
        // Collect role assignments from all groups
        void CollectRoleAssignments(SecurityGroup group)
        {
            foreach (var ra in group.RoleAssignments)
            {
                // Use a combination of role name and scope as unique identifier
                var key = $"{ra.RoleName}|{ra.Scope}";
                if (!processedIds.Contains(key))
                {
                    processedIds.Add(key);
                    allRoleAssignments.Add(ra);
                }
            }
            
            foreach (var parentGroup in group.ParentGroups)
            {
                CollectRoleAssignments(parentGroup);
            }
        }
        
        foreach (var group in result.SecurityGroups)
        {
            CollectRoleAssignments(group);
        }
        
        return allRoleAssignments;
    }
}
