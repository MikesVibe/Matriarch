@page "/roleassignments"
@using Matriarch.Shared.Models
@using Matriarch.Web.Services
@inject IServiceProvider ServiceProvider
@rendermode InteractiveServer

<PageTitle>Identity Role Assignments</PageTitle>

<h1>Identity Role Assignments Viewer</h1>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Identity Information</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="dataSource" class="form-label">Data Source:</label>
                        <select class="form-select" id="dataSource" @bind="dataSource">
                            <option value="Local">Local Database</option>
                            <option value="Azure">Azure (Direct)</option>
                        </select>
                    </div>
                    <div class="col-md-6"></div>
                    <div class="col-md-12">
                        <label for="identityInput" class="form-label">Identity (Email, Object ID, or Name):</label>
                        <input type="text" class="form-control" id="identityInput" @bind="identityInput" placeholder="e.g., user@example.com or 12345678-1234-1234-1234-123456789abc or John Doe" />
                        <div class="form-text">Enter an email address, object ID (GUID), or display name. The system will auto-detect the type and query Entra ID for validation.</div>
                    </div>
                </div>
                <div class="mt-3">
                    <button class="btn btn-primary" @onclick="LoadRoleAssignments" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Loading...</span>
                        }
                        else
                        {
                            <span>Load Role Assignments</span>
                        }
                    </button>
                    @if (!string.IsNullOrEmpty(dataSource))
                    {
                        <span class="ms-3 text-muted">Using: <strong>@dataSource</strong></span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (result != null)
{
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5>Identity Summary</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9">@result.Identity.Name</dd>
                        
                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@result.Identity.Email</dd>
                        
                        <dt class="col-sm-3">Object ID:</dt>
                        <dd class="col-sm-9"><code>@result.Identity.ObjectId</code></dd>
                        
                        <dt class="col-sm-3">Application ID:</dt>
                        <dd class="col-sm-9"><code>@result.Identity.ApplicationId</code></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5>Direct Role Assignments</h5>
                </div>
                <div class="card-body">
                    @if (result.DirectRoleAssignments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Role Name</th>
                                        <th>Scope</th>
                                        <th>Assigned To</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ra in result.DirectRoleAssignments)
                                    {
                                        <tr>
                                            <td><strong>@ra.RoleName</strong></td>
                                            <td><code class="text-muted">@ra.Scope</code></td>
                                            <td><span class="badge bg-primary">@ra.AssignedTo</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No direct role assignments found.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5>Security Group Memberships & Role Assignments</h5>
                </div>
                <div class="card-body">
                    @if (result.SecurityGroups.Any())
                    {
                        @foreach (var group in result.SecurityGroups)
                        {
                            var groupId = group.Id;
                            var isExpanded = expandedGroups.Contains(groupId);
                            
                            <div class="card mb-3">
                                <div class="card-header d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">@group.DisplayName</h6>
                                        <small class="text-muted">@group.Description</small>
                                    </div>
                                    <button class="btn btn-sm btn-outline-secondary" @onclick="() => ToggleGroup(groupId)">
                                        @if (isExpanded)
                                        {
                                            <span>▼ Collapse</span>
                                        }
                                        else
                                        {
                                            <span>▶ Expand</span>
                                        }
                                    </button>
                                </div>
                                @if (isExpanded)
                                {
                                    <div class="card-body">
                                        @if (group.RoleAssignments.Any())
                                        {
                                            <h6 class="text-muted mb-2">Role Assignments:</h6>
                                            <div class="table-responsive mb-3">
                                                <table class="table table-sm table-bordered">
                                                    <thead class="table-light">
                                                        <tr>
                                                            <th>Role Name</th>
                                                            <th>Scope</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var ra in group.RoleAssignments)
                                                        {
                                                            <tr>
                                                                <td><strong>@ra.RoleName</strong></td>
                                                                <td><code class="text-muted">@ra.Scope</code></td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                        
                                        @if (group.ParentGroups.Any())
                                        {
                                            <h6 class="text-muted mb-2">Inherited from Parent Groups:</h6>
                                            @foreach (var parentGroup in group.ParentGroups)
                                            {
                                                <div class="card mb-2 border-secondary">
                                                    <div class="card-header bg-light">
                                                        <h6 class="mb-1">↳ @parentGroup.DisplayName</h6>
                                                        <small class="text-muted">@parentGroup.Description</small>
                                                    </div>
                                                    <div class="card-body">
                                                        @if (parentGroup.RoleAssignments.Any())
                                                        {
                                                            <div class="table-responsive">
                                                                <table class="table table-sm table-bordered">
                                                                    <thead class="table-light">
                                                                        <tr>
                                                                            <th>Role Name</th>
                                                                            <th>Scope</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @foreach (var ra in parentGroup.RoleAssignments)
                                                                        {
                                                                            <tr>
                                                                                <td><strong>@ra.RoleName</strong></td>
                                                                                <td><code class="text-muted">@ra.Scope</code></td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <p class="text-muted mb-0">No role assignments in this parent group.</p>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Not a member of any security groups.</p>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private string dataSource = "Local";
    private string identityInput = "user@example.com";
    private bool isLoading = false;
    private IdentityRoleAssignmentResult? result;
    private HashSet<string> expandedGroups = new();

    private async Task LoadRoleAssignments()
    {
        if (string.IsNullOrWhiteSpace(identityInput))
        {
            return;
        }

        isLoading = true;
        try
        {
            // Get the appropriate service based on data source selection
            IRoleAssignmentService service = dataSource == "Azure"
                ? ServiceProvider.GetRequiredService<AzureRoleAssignmentService>()
                : ServiceProvider.GetRequiredService<DatabaseRoleAssignmentService>();

            result = await service.GetRoleAssignmentsAsync(identityInput);
            
            // Expand all groups by default when loading
            if (result != null)
            {
                expandedGroups = result.SecurityGroups.Select(g => g.Id).ToHashSet();
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ToggleGroup(string groupId)
    {
        if (expandedGroups.Contains(groupId))
        {
            expandedGroups.Remove(groupId);
        }
        else
        {
            expandedGroups.Add(groupId);
        }
    }
}
