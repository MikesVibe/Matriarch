        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>API Permissions</h5>
                </div>
                <div class="card-body">
                    @if (isLoadingApiPermissions)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-dark" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted mt-2">Loading API permissions...</p>
                        </div>
                    }
                    else if (result.ApiPermissions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Resource</th>
                                        <th>Permission</th>
                                        <th>Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var permission in result.ApiPermissions)
                                    {
                                        <tr>
                                            <td><strong>@permission.ResourceDisplayName</strong></td>
                                            <td><code>@permission.PermissionValue</code></td>
                                            <td><span class="badge bg-secondary">@permission.PermissionType</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No API permissions found.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Key Vault Access Policies</h5>
