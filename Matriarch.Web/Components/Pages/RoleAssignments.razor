        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Direct Role Assignments</h5>
                </div>
                <div class="card-body">
                    @if (isLoadingDirectRoleAssignments)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted mt-2">Loading direct role assignments...</p>
                        </div>
                    }
                    else if (result.DirectRoleAssignments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Role Name</th>
                                        <th>Scope</th>
                                        <th>Assigned To</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ra in result.DirectRoleAssignments)
                                    {
                                        <tr>
                                            <td>@ra.RoleName</td>
                                            <td><code>@ra.Scope</code></td>
                                            <td><span class="badge bg-primary">@ra.AssignedTo</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No direct role assignments found.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Direct Group Memberships</h5>
                </div>
                <div class="card-body">
                    @if (isLoadingDirectGroups)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted mt-2">Loading direct groups...</p>
                        </div>
                    }
                    else if (result.SecurityDirectGroups.Any())
                    {
                        <ul class="list-group">
                            @foreach (var group in result.SecurityDirectGroups)
                            {
                                <li class="list-group-item">
                                    <strong>@group.DisplayName</strong>
                                    @if (!string.IsNullOrEmpty(group.Description))
                                    {
                                        <br />
                                        <small class="text-muted">@group.Description</small>
                                    }
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Not a direct member of any security groups.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Indirect Group Memberships (via parent groups)</h5>
                </div>
                <div class="card-body">
                    @if (isLoadingIndirectGroups)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-secondary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted mt-2">Loading indirect groups...</p>
                        </div>
                    }
                    else if (result.SecurityIndirectGroups.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Group Name</th>
                                        <th>Description</th>
                                        <th>Child Group</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var group in result.SecurityIndirectGroups)
                                    {
                                        <tr>
                                            <td><strong>@group.DisplayName</strong></td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(group.Description))
                                                {
                                                    <small class="text-muted">@group.Description</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (group.ChildGroup != null)
                                                {
                                                    <span class="badge bg-info">@group.ChildGroup.DisplayName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No indirect group memberships.</p>
