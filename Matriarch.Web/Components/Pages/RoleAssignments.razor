@page "/"
@page "/roleassignments"
@using Matriarch.Web.Models
@using Matriarch.Web.Services
@inject IRoleAssignmentService _roleAssignmentService
@inject IExcelExportService _excelExportService
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Matriarch - Azure Identity Role Assignments Viewer</PageTitle>

<div class="hero-section">
    <h1 class="hero-title">Azure Identity Role Assignments Viewer</h1>
    <p class="hero-subtitle">View Azure role assignments, group memberships, and permissions in real-time</p>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Identity Information</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-12">
                        <label for="identityInput" class="form-label">Identity (Email, Object ID, Application ID, Group ID, or Name):</label>
                        <input type="text" class="form-control" id="identityInput" @bind="identityInput" placeholder="user@example.com" />
                        <div class="form-text">Enter an email, object ID (user/service principal/group), application ID (App Registration), group ID, or display name. The system will auto-detect the type and query Entra ID.</div>
                    </div>
                </div>
                <div class="mt-3">
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="useParallelProcessing" @bind="useParallelProcessing" />
                        <label class="form-check-label" for="useParallelProcessing">
                            Enable Parallel Processing (faster for large group hierarchies)
                        </label>
                    </div>
                    <div class="d-flex justify-content-between align-items-center gap-2">
                        <button class="btn btn-primary" @onclick="LoadRoleAssignments" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>Loading...</span>
                            }
                            else
                            {
                                <span>Load Role Assignments</span>
                            }
                        </button>
                        @if (IsDataFullyLoaded())
                        {
                            <button class="btn btn-primary ms-auto" @onclick="DownloadExcel">
                                <i class="bi bi-download me-2"></i>
                                Download Results as Excel
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Error:</strong> @errorMessage
                <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)" aria-label="Close"></button>
            </div>
        </div>
    </div>
}

@if (searchResult != null && searchResult.HasMultipleResults)
{
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Multiple Identities Found - Select One</h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">Multiple identities match your search. Please select one from the table below:</p>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Type</th>
                                    <th>Name</th>
                                    <th>Object ID</th>
                                    <th>Application ID</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var identity in searchResult.Identities)
                                {
                                    <tr class="@(selectedIdentity?.ObjectId == identity.ObjectId ? "table-active" : "")" style="cursor: pointer;" @onclick="@(() => SelectIdentity(identity))">
                                        <td><span class="badge bg-secondary">@GetIdentityTypeDisplay(identity.Type)</span></td>
                                        <td>@identity.Name</td>
                                        <td><code>@identity.ObjectId</code></td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(identity.ApplicationId))
                                            {
                                                <code>@identity.ApplicationId</code>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(identity.Email))
                                            {
                                                @identity.Email
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-primary" @onclick="@(() => SelectIdentity(identity))" @onclick:stopPropagation="true">
                                                @if (selectedIdentity?.ObjectId == identity.ObjectId)
                                                {
                                                    <span>âœ“ Selected</span>
                                                }
                                                else
                                                {
                                                    <span>Select</span>
                                                }
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (selectedIdentity != null)
                    {
                        <div class="mt-3">
                            <button class="btn btn-success" @onclick="LoadRoleAssignmentsForSelectedIdentity" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Loading...</span>
                                }
                                else
                                {
                                    <span>Load Role Assignments for Selected Identity</span>
                                }
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@if (processingTime.HasValue)
{
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="alert alert-info" role="alert">
                <i class="bi bi-clock me-2"></i>
                <strong>Processing Time:</strong> @processingTime.Value.TotalMilliseconds.ToString("F2") ms (@processingTime.Value.TotalSeconds.ToString("F2") seconds)
                @if (useParallelProcessing)
                {
                    <span class="badge bg-success ms-2">Parallel Processing</span>
                }
                else
                {
                    <span class="badge bg-secondary ms-2">Sequential Processing</span>
                }
            </div>
        </div>
    </div>
}

@if (result != null)
{
