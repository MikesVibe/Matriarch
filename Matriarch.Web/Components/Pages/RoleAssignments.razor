@page "/"
@page "/roleassignments"
@using Matriarch.Web.Models
@using Matriarch.Web.Services
@inject IRoleAssignmentService _roleAssignmentService
@inject IExcelExportService _excelExportService
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Matriarch - Azure Identity Role Assignments Viewer</PageTitle>

<div class="hero-section">
    <h1 class="hero-title">Azure Identity Role Assignments Viewer</h1>
    <p class="hero-subtitle">View Azure role assignments, group memberships, and permissions in real-time</p>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Identity Information</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-12">
                        <label for="identityInput" class="form-label">Identity (Email, Object ID, Application ID, Group ID, or Name):</label>
                        <input type="text" class="form-control" id="identityInput" @bind="identityInput" placeholder="user@example.com" />
                        <div class="form-text">Enter an email, object ID (user/service principal/group), application ID (App Registration), group ID, or display name. The system will auto-detect the type and query Entra ID.</div>
                    </div>
                </div>
                <div class="mt-3">
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="useParallelProcessing" @bind="useParallelProcessing" />
                        <label class="form-check-label" for="useParallelProcessing">
                            Enable Parallel Processing (faster for large group hierarchies)
                        </label>
                    </div>
                    <div class="d-flex justify-content-between align-items-center gap-2">
                        <button class="btn btn-primary" @onclick="LoadRoleAssignments" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>Loading...</span>
                            }
                            else
                            {
                                <span>Load Role Assignments</span>
                            }
                        </button>
                        @if (IsDataFullyLoaded())
                        {
                            <button class="btn btn-primary ms-auto" @onclick="DownloadExcel">
                                <i class="bi bi-download me-2"></i>
                                Download Results as Excel
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Error:</strong> @errorMessage
                <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)" aria-label="Close"></button>
            </div>
        </div>
    </div>
}

@if (searchResult != null && searchResult.HasMultipleResults)
{
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Multiple Identities Found - Select One</h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">Multiple identities match your search. Please select one from the table below:</p>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Type</th>
                                    <th>Name</th>
                                    <th>Object ID</th>
                                    <th>Application ID</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var identity in searchResult.Identities)
                                {
                                    <tr class="@(selectedIdentity?.ObjectId == identity.ObjectId ? "table-active" : "")" style="cursor: pointer;" @onclick="@(() => SelectIdentity(identity))">
                                        <td><span class="badge bg-secondary">@GetIdentityTypeDisplay(identity.Type)</span></td>
                                        <td>@identity.Name</td>
                                        <td><code>@identity.ObjectId</code></td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(identity.ApplicationId))
                                            {
                                                <code>@identity.ApplicationId</code>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(identity.Email))
                                            {
                                                @identity.Email
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-primary" @onclick="@(() => SelectIdentity(identity))" @onclick:stopPropagation="true">
                                                @if (selectedIdentity?.ObjectId == identity.ObjectId)
                                                {
                                                    <span>âœ“ Selected</span>
                                                }
                                                else
                                                {
                                                    <span>Select</span>
                                                }
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (selectedIdentity != null)
                    {
                        <div class="mt-3">
                            <button class="btn btn-success" @onclick="LoadRoleAssignmentsForSelectedIdentity" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Loading...</span>
                                }
                                else
                                {
                                    <span>Load Role Assignments for Selected Identity</span>
                                }
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@if (processingTime.HasValue)
{
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="alert alert-info" role="alert">
                <i class="bi bi-clock me-2"></i>
                <strong>Processing Time:</strong> @processingTime.Value.TotalMilliseconds.ToString("F2") ms (@processingTime.Value.TotalSeconds.ToString("F2") seconds)
                @if (useParallelProcessing)
                {
                    <span class="badge bg-success ms-2">Parallel Processing</span>
                }
                else
                {
                    <span class="badge bg-secondary ms-2">Sequential Processing</span>
                }
            </div>
        </div>
    </div>
}

@if (result != null)
{
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Identity Summary</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Identity Type:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary" role="alert">@GetIdentityTypeDisplay(result.Identity.Type)</span>
                        </dd>

                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9">@result.Identity.Name</dd>

                        @if (result.Identity.Type == IdentityType.User)
                        {
                            <dt class="col-sm-3">Email:</dt>
                            <dd class="col-sm-9">@result.Identity.Email</dd>
                        }

                        @if (result.Identity.Type == IdentityType.User || result.Identity.Type == IdentityType.Group)
                        {
                            <dt class="col-sm-3">Object ID:</dt>
                            <dd class="col-sm-9"><code>@result.Identity.ObjectId</code></dd>
                        }

                        @if (result.Identity.Type != IdentityType.User && result.Identity.Type != IdentityType.Group)
                        {
                            @if (!string.IsNullOrEmpty(result.Identity.ApplicationId))
                            {
                                <dt class="col-sm-3">ClientId / ApplicationId:</dt>
                                <dd class="col-sm-9"><code>@result.Identity.ApplicationId</code></dd>
                            }

                            @if (!string.IsNullOrEmpty(result.Identity.AppRegistrationId))
                            {
                                <dt class="col-sm-3">App Registration ObjectId:</dt>
                                <dd class="col-sm-9"><code>@result.Identity.AppRegistrationId</code></dd>
                            }

                            <dt class="col-sm-3">Enterprise Application ObjectId:</dt>
                            <dd class="col-sm-9"><code>@result.Identity.ObjectId</code></dd>

                            @if (result.Identity.Type == IdentityType.SystemAssignedManagedIdentity || result.Identity.Type == IdentityType.UserAssignedManagedIdentity)
                            {
                                @if (!string.IsNullOrEmpty(result.Identity.SubscriptionId))
                                {
                                    <dt class="col-sm-3">Subscription ID:</dt>
                                    <dd class="col-sm-9"><code>@result.Identity.SubscriptionId</code></dd>
                                }

                                @if (!string.IsNullOrEmpty(result.Identity.ResourceGroup))
                                {
                                    <dt class="col-sm-3">Resource Group:</dt>
                                    <dd class="col-sm-9">@result.Identity.ResourceGroup</dd>
                                }
                            }
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>

    @if (IsDataFullyLoaded())
    {
        <!-- Download button moved to Identity Information card -->
    }

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Direct Role Assignments</h5>
                </div>
                <div class="card-body">
                    @if (isLoadingDirectRoleAssignments)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted mt-2">Loading direct role assignments...</p>
                        </div>
                    }
                    else if (result.DirectRoleAssignments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Role Name</th>
                                        <th>Scope</th>
                                        <th>Assigned To</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ra in result.DirectRoleAssignments)
                                    {
                                        <tr>
                                            <td>@ra.RoleName</td>
                                            <td><code>@ra.Scope</code></td>
                                            <td><span class="badge bg-primary">@ra.AssignedTo</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No direct role assignments found.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Direct Group Memberships</h5>
                </div>
                <div class="card-body">
                    @if (isLoadingDirectGroups)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted mt-2">Loading direct groups...</p>
                        </div>
                    }
                    else if (result.SecurityDirectGroups.Any())
                    {
                        <ul class="list-group">
                            @foreach (var group in result.SecurityDirectGroups)
                            {
                                <li class="list-group-item">
                                    <strong>@group.DisplayName</strong>
                                    @if (!string.IsNullOrEmpty(group.Description))
                                    {
                                        <br />
                                        <small class="text-muted">@group.Description</small>
                                    }
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Not a direct member of any security groups.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Indirect Group Memberships (via parent groups)</h5>
                </div>
                <div class="card-body">
                    @if (isLoadingIndirectGroups)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-secondary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted mt-2">Loading indirect groups...</p>
                        </div>
                    }
                    else if (result.SecurityIndirectGroups.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Group Name</th>
                                        <th>Description</th>
                                        <th>Child Group</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var group in result.SecurityIndirectGroups)
                                    {
                                        <tr>
                                            <td><strong>@group.DisplayName</strong></td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(group.Description))
                                                {
                                                    <small class="text-muted">@group.Description</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (group.ChildGroup != null)
                                                {
                                                    <span class="badge bg-primary">@group.ChildGroup.DisplayName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No indirect group memberships.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>All Role Assignments (from all groups)</h5>
                </div>
                <div class="card-body">
                    @if (isLoadingGroupRoleAssignments)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-warning" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted mt-2">Loading group role assignments...</p>
                        </div>
                    }
                    else
                    {
                        var allGroupRoleAssignments = GetAllRoleAssignments();
                        if (allGroupRoleAssignments.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Role Name</th>
                                            <th>Scope</th>
                                            <th>Source</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var ra in allGroupRoleAssignments)
                                        {
                                            <tr>
                                                <td><strong>@ra.RoleName</strong></td>
                                                <td><code class="text-muted">@ra.Scope</code></td>
                                                <td><span class="badge bg-info">@ra.AssignedTo</span></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted mb-0">No role assignments from group memberships.</p>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>API Permissions</h5>
                </div>
                <div class="card-body">
                    @if (isLoadingApiPermissions)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-dark" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted mt-2">Loading API permissions...</p>
                        </div>
                    }
                    else if (result.ApiPermissions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Resource</th>
                                        <th>Permission</th>
                                        <th>Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var permission in result.ApiPermissions)
                                    {
                                        <tr>
                                            <td><strong>@permission.ResourceDisplayName</strong></td>
                                            <td><code>@permission.PermissionValue</code></td>
                                            <td><span class="badge bg-primary">@permission.PermissionType</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No API permissions found.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Key Vault Access Policies</h5>
                </div>
                <div class="card-body">
                    @if (isLoadingKeyVaultPolicies)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-info" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted mt-2">Loading Key Vault access policies...</p>
                        </div>
                    }
                    else if (result.KeyVaultAccessPolicies.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Key Vault</th>
                                        <th>Assigned To</th>
                                        <th>Key Permissions</th>
                                        <th>Secret Permissions</th>
                                        <th>Certificate Permissions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var policy in result.KeyVaultAccessPolicies)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@policy.KeyVaultName</strong>
                                                <br />
                                                <small class="text-muted"><code>@policy.KeyVaultId</code></small>
                                            </td>
                                            <td><span class="badge bg-info">@policy.AssignedTo</span></td>
                                            <td>
                                                @if (policy.KeyPermissions.Any())
                                                {
                                                    <span>@string.Join(", ", policy.KeyPermissions)</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">None</span>
                                                }
                                            </td>
                                            <td>
                                                @if (policy.SecretPermissions.Any())
                                                {
                                                    <span>@string.Join(", ", policy.SecretPermissions)</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">None</span>
                                                }
                                            </td>
                                            <td>
                                                @if (policy.CertificatePermissions.Any())
                                                {
                                                    <span>@string.Join(", ", policy.CertificatePermissions)</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">None</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No Key Vault access policies found for this identity or its groups.</p>
                    }
                </div>
            </div>
        </div>
    </div>
}
