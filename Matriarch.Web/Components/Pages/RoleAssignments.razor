                            <div class="spinner-border text-info" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted mt-2">Loading Key Vault access policies...</p>
                        </div>
                    }
                    else if (result.KeyVaultAccessPolicies.Any())
                    {
